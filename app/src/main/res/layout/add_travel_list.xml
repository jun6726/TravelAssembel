<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTravel_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="여행 장소"
        android:textSize="30sp"
        android:textColor="@color/mdtp_white"/>

    <EditText
        android:id="@+id/travel_location"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTravel_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="여행 장소를 선택해주세요"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/mdtp_white"
        android:textColorHint="@color/mdtp_white" />

    <TextView
        android:id="@+id/tv_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/travel_location"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="여행 기간"
        android:textSize="30sp"
        android:textColor="@color/mdtp_white"/>

    <EditText
        android:id="@+id/travel_Period"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_period"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="기간을 선택해주세요"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/mdtp_white"
        android:textColorHint="@color/mdtp_white" />

</RelativeLayout>